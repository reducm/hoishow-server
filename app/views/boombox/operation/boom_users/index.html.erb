<%# encoding: utf-8 %>

<div class="nav" id="boom_users">
  <h1 class="text-center">用户列表</h1>
  <div class="search">
    <%= form_tag(search_boombox_operation_boom_users_path, class: 'form-inline', method: 'get') do %>
      <%= text_field_tag "q", nil,  class: 'form-control', placeholder: "输入用户名或手机号搜索", size: 50 %>
      <%= submit_tag "搜索", class: 'btn btn-default' %>
    <% end %>
  </div>
</div>
<div class="boom_users_list mt20">
  <%= render partial: 'table', locals: {users: @users} %>
</div>
