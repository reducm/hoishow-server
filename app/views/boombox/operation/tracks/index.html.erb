<%# encoding: utf-8 %>
<div class="nav" id='tracks'>
  <div class="text-center">
    <h1>音乐</h1>
    <%= link_to "上传音乐", new_boombox_operation_track_url, class: 'btn btn-primary' %>
  </div>

  <div class="search">
    <%= form_tag(search_boombox_operation_tracks_path, class: 'form-inline', method: 'get') do |f| %>
      <div class="datetimepicker form-group">
        <label> 上传时间</label>
        <%= text_field_tag "start_time", Time.now.strftime("%Y-%m-%d %H:%M"),  class: 'form-control', placeholder: "起始时间", size:30 %>
        <label> 至</label>
        <%= text_field_tag "end_time", ( Time.now + 1.month ).strftime("%Y-%m-%d %H:%M"),  class: 'form-control', placeholder: "结束时间", size:30 %>
      </div>
      <%= select_tag "select_options", options_for_select([["全部",0], ["推荐",1]]), class:"form-control" %>
      <%= text_field_tag "q", nil,  class: 'form-control', placeholder: "输入关键词进行搜索", size:30%>
      <%= submit_tag "搜索", class: 'btn btn-default' %>
    <% end %>
  </div>

  <div class="tracks_list mt20">
    <%= render partial: "table", locals: {tracks: @tracks} %>
  </div>
</div>
