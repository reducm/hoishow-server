<%# encoding: utf-8 %>
<div class="nav">
  <div class="col-md-offset-5">
    <% if params[:action] == 'new' %>
      <% form_url = "/boombox/operation/tracks" %>
      <% form_method = "POST" %>
      <h1>上传音乐</h1>
    <% elsif params[:action] == 'edit' %>
      <% form_url = "/boombox/operation/tracks/#{track.id}" %>
      <% form_method = "PATCH" %>
      <h1>编辑音乐</h1>
    <% end %>
  </div>
  <div id="track_form">
    <%= hidden_field_tag "track_tag_ids", track.boom_tags.pluck(:id) %>
    <%= simple_form_for( track, url: form_url, method: form_method, html: { multipart: :true }) do |f| %>
      <div class="row">
        <div class="col-sm-5">
          <div class="text-center">
            <%= f.input :cover, label: "上传封面(建议大小:300x300)", input_html: {class: "track-cover-uploader col-sm-offset-4"} %>
            <div id="track_cover_preview">
              <%= boombox_default_avatar track.cover_url %>
            </div>
          </div>
        </div>

        <div class="col-sm-6">
          <div>
            <%= f.input :file, label: "上传音乐,支持格式:mp3", input_html: {class: "track-file-uploader col-sm-offset-3"}, label_html: {class: "col-sm-offset-3"} %>
            <% if track.file_url %>
              <audio src=<%= track.file_url %> id="track-file-pre" controls="controls">你的浏览器不支持audio标签</audio>
              <% track_src = track.file_url %>
            <% else %>
              <audio src="#" id="track-file-pre">你的浏览器不支持audio标签</audio>
            <% end %>
            <%= f.hidden_field :duration %>
            <%= f.input :name, label: "(必填)标题", placeholder: "请输入少于10字的标题", input_html:{} %>
            <%= f.input :artists, label: "艺人", placeholder: "请输入艺人名字" %>
            <%= f.input :is_top, label: "打勾推荐此音乐" %>

            <%= label_tag "tags", "标签" %>
            <%= hidden_field_tag "tag_ids", params[:boom_tag_ids], id: 'boom_tag_ids' %>
            <div id="track_delete_tag">
              <% tags = track.boom_tags.pluck(:name, :id) %>
              <% tags.each do |track_tag| %>
                <span class="btn btn-default"><%= track_tag[0] + "" %></span><button data-tag-id="<%= track_tag[1] %>" class="btn btn-danger remove_tag">删除</button>
              <% end %>
            </div>
            <div>
              <%= select_tag "select_tags", options_for_select(BoomTag.valid_tags.collect{|boom_tag| [boom_tag.name, boom_tag.id]}), id: "track_tag_list" %>
              <a class="btn btn-primary" id="track_add_tag">添加选中标签</a>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-offset-5">
        <%= submit_tag "保存", class: "btn btn-primary", id: "track-submit", data: { disable_with: "loading" } %>
      </div>
    <% end %>
  </div>
</div>
