<%# encoding: utf-8 %>

<table class="table table-hover radios">
  <thead>
    <tr>
      <th class='text-center'>ID</th>
      <th class='text-center'>封面</th>
      <th class='text-center'>标题</th>
      <th class='text-center'>音乐数量</th>
      <th class='text-center'>标签</th>
      <th class='text-center'>创建者</th>
      <th class='text-center'>创建时间</th>
      <th class='text-center'>修改时间</th>
      <th class='text-center'>操作</th>
    </tr>
  </thead>
  <tbody class='text-center'>
    <% if radios.any? %>
      <% radios.each do|radio| %>
        <tr>
          <td><%= radio.id %></td>
          <td><%= image_tag(radio.cover_url, size: "50x50") if radio.cover_url %></td>
          <td><%= radio.name %></td>
          <td><%= radio.tracks.count %></td>
          <td>
            <% tags = radio.boom_tags.pluck(:name)%>
            <% if tags.present? %>
              <%= tags.join(",") %>
            <% end %>
          </td>
          <td><%= radio.creator.name if radio.creator %></td>
          <td><%= radio.created_at.try(:strfcn_time) %></td>
          <td><%= radio.updated_at.try(:strfcn_time) %></td>
          <td>
            <%= link_to radio.is_top_cn, change_is_top_boombox_operation_radio_path(radio), method: 'POST' %>
            <%= link_to "编辑", edit_boombox_operation_radio_path(radio)%>
            <%= link_to "删除", boombox_operation_radio_path(radio), method: "delete", data: {confirm: "确定删除吗？"} %>
          </td>
        </tr>
      <%end%>
    <%end%>
  </tbody>
</table>
<%= paginate radios %>
