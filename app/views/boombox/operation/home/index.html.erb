<%# encoding: utf-8 %>

<div class="nav" id='home'>
  <h1 class="pull-left">播霸后台首页(version 1.0)</h1>
  <table class="table">
    <thead>
      <tr>
        <th>总用户数量</th>
        <th>今日新增用户数</th>
        <th>音乐数量(<%= link_to "查看更多", boombox_operation_tracks_path %>)</th>
        <th>playlist数量(<%= link_to "查看更多", boombox_operation_playlists_path %>)</th>
        <th>艺人数量(<%= link_to "查看更多", boombox_operation_collaborators_path %>)</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><span><%= @total_users_count %></span></td>
        <td><span><%= @today_registered_users_count %></span></td>
        <td><span><%= @tracks_count %></span></td>
        <td><span><%= @playlists_count %></span></td>
        <td><span><%= @collaborators_count %></span></td>
      </tr>
    </tbody>
  </table>
  <div class="btn-group">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
      <span class="display-time">本日</span>
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu select-begin-time" role="menu">
      <li><a href="javascript:void(0);" id="today">本日</a>
      </li>
      <li><a href="javascript:void(0);" id="this_month">本月</a>
      </li>
      <li><a href="javascript:void(0);" id="this_year">本年</a>
      </li>
    </ul>
  </div>
  <div id="data_collection"></div>
</div>
