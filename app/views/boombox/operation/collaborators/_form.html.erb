<%# encoding: utf-8 %>

<div class="row">
  <div class="col-md-5 col-md-offset-2">
    <h3 class="pull-left header-primary">艺人资料</h3>
    <%= link_to '通过审核', '#', class: 'btn btn-primary pull-right' %>
  </div>
</div>

<%= simple_form_for([:boombox, :operation, collaborator ], html: { class: 'form-horizontal' }) do |f| %>
  <div class="row">
    <div class="col-md-2 col-md-offset-2 avatar-area">
      <div class="avatar-content">
        社交信息（公开） 
      </div>
    </div>

    <div class="col-md-3 information-area">
      <div class="information-content">
        个人信息（保密） 
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-5 col-md-offset-2 poster-area">
      <div class="poster-content">
        海报
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-5 col-md-offset-2 introduction-area">
      <div class="introduction-content">
        个人简介
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-1 col-md-offset-4">
      <%= submit_tag "保存", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
