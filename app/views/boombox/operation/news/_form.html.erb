<div class="row">
  <div class="col-xs-9 col-sm-6 cover_area">
    <div class="text-center">
      <div class='cover_preview'><%= boombox_default_cover news.cover_url %></div>
      <span class="btn btn-primary fileinput-button">
        <%= f.input :cover, label: "上传海报", input_html: {class: "news_cover_uploader"} %>
      </span>
      <span>请上传 1280x720 jpg 类型图像文件</span>
    </div>
  </div>
  <div class="col-xs-3 col-sm-5">
    <div id="news_form_content">
      <%= f.input :name, label: "(必填)标题", placeholder: "请输入标题名字" %>
      <%= f.input :is_display, label: "打勾显示此活动" %>
    </div>
  </div>
</div>
<%= hidden_field_tag "boom_activity[mode]", 'news' %>
<%= f.input :description, label: '图文描述', input_html: {id: "news_description"} %>
<div class="form-group text-center">
  <%= submit_tag "保存", class: "btn btn-primary", id: "news-submit", data: { disable_with: "loading" } %>
</div>

<div class="modal fade" id="videoModal" tabindex="-1" role="dialog" aria-labelledby="videoModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <form class="form-horizontal">
        <div class="form-group">
          <label for="inputTitle" class="col-sm-2 control-label">视频标题</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="inputTitle" placeholder="Title">
          </div>
        </div>
        <div class="form-group">
          <label for="inputUrl" class="col-sm-2 control-label">视频地址</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="inputUrl" placeholder="Url">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-10 col-sm-10">
            <button type="submit" class="btn btn-primary add_video">添加</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<style media="screen">
  .modal-content{
    padding-top: 20px;
    padding-right: 15px;
  }
</style>
