<%# encoding: utf-8 %>

<div class="row" style="text-align: center;">
  <% if @collaborator.avatar_url.present? %>
    <p><%= image_tag(@collaborator.avatar_url, size: "50x50") %></p>
  <% else %>
    <p>无头像</p>
  <% end %>
  <p><%= @collaborator.name %></p>
</div>

<div class="row">
  <table class="table table-hover" style="text-align: center;">
    <tbody>
      <tr>
        <td>粉丝<%= @collaborator.followed_count %></td>
        <td>个人音乐<%= @collaborator.boom_tracks.count %></td>
        <td>个人Playlist<%= @collaborator.boom_playlists.count %></td>
      </tr>
    </tbody>
  </table>
</div>
