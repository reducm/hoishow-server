<%# encoding: utf-8 %>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title text-center">忘记密码</h3>
        </div>
        <div class="panel-body">
          <%= form_tag(send_reset_password_email_boombox_dj_boom_admins_path) do %>
            <fieldset>
              <div class="form-group">
                <%= text_field_tag :email, '', class: "form-control", placeholder: "Email" %>
              </div>
              <%= submit_tag "提交", class: 'btn btn-lg btn-primary btn-block' %>
            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
