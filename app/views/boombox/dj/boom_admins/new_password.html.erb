<%# encoding: utf-8 %>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title text-center">新密码</h3>
        </div>
        <div class="panel-body">
          <%= form_tag(reset_password_boombox_dj_boom_admin_path) do %>
            <fieldset>
              <div class="form-group">
                <%= password_field_tag :password, '', class: "form-control", placeholder: "Password" %>
              </div>
              <div class="form-group">
                <%= password_field_tag :password_confirmation, '', class: "form-control", placeholder: "Password Confirmation" %>
              </div>
              <%= submit_tag "提交", class: 'btn btn-lg btn-primary btn-block' %>
            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
