<%# encoding: utf-8 %>
<div class="row boomb-adminsnew">
  <div class="container col-md-3 col-md-offset-3">
    <div class="row">
      <div>
        <div class="login-panel panel panel-default">
          <div class="panel-heading">
              <h3 class="panel-title text-center">申请加入</h3>
          </div>
          <div class="panel-body">
            <%= form_for(:boom_admin, :url => boombox_dj_boom_admins_path, :method => 'post') do |f| %>
              <fieldset>
                <div class="form-group">
                  <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
                  <i class="fa fa-envelope-o"></i>
                </div>
                <div class="form-group">
                  <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
                  <i class="fa fa-user"></i>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
                  <i class="fa fa-lock"></i>
                </div>
                <%= f.submit "下一步", class: 'btn btn-lg btn-primary btn-block' %>
              </fieldset>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="jumbotron col-md-3">
    <h2>加入播霸后，你可以</h2>
    <p>- 拥有个人频道</p>
    <p>- 发布音乐</p>
    <p>- 发布 playlist</p>
    <p>- 发布个人 timeline 动态</p>
    <p>- 发布个人 show</p>
  </div>
</div>