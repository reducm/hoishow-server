<%# encoding: utf-8 %>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">DJ登录</h3>
        </div>
        <div class="panel-body">
          <%= form_for(:session, :url => boombox_dj_sessions_path) do |f| %>
            <fieldset>
              <div class="form-group">
                <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
              </div>
              <%= f.submit "登陆", class: 'btn btn-lg btn-primary btn-block' %>
              <p style="text-align: center; margin: 12px;">或者<p>
              <%= link_to "申请加入", boombox_dj_signup_path, class: 'btn btn-lg btn-warning btn-block' %>
            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
