<%# encoding: utf-8 %>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title text-center">DJ登录</h3>
        </div>
        <div class="panel-body">
          <%= form_for(:dj_session, :url => boombox_dj_sessions_path) do |f| %>
            <fieldset>
              <div class="form-group mb20">
                <%= f.text_field :dj_username, class: "form-control", placeholder: "Username" %>
                <i class="fa fa-user"></i>
              </div>
              <div class="form-group mb40">
                <%= f.password_field :dj_password, class: "form-control", placeholder: "Password" %>
                <i class="fa fa-lock" ></i>
              </div>
              <%= f.submit "登陆", class: 'btn btn-lg btn-primary btn-block' %>
              <p style="text-align: center; margin: 12px;">或者</p>
              <%= link_to "申请加入", boombox_dj_signup_path, class: 'btn btn-lg btn-warning btn-block' %>
              <p style="margin: 12px;">
                <%= link_to "忘记密码？", boombox_dj_forget_password_path %>
              <p>
            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
