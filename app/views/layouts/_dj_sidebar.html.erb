<%# encoding: utf-8 %>

<div id="wrapper">
  <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
    <div class="navbar-header">
      <a class="navbar-brand" href=<%= boombox_dj_root_path%>><i>播霸</i></a>
    </div>
    
    <%#= notice_message %>

    <div class="navbar-default sidebar" role="navigation">
      <div class="sidebar-nav navbar-collapse">
        <ul class="nav" id="side-menu">
          <li>
            <div style="text-align: center;">
              <% if current_collaborator.avatar_url.present? %> 
                <%= image_tag current_collaborator.avatar_url, size: '80x80' %>
              <% end%>
              <figcaption style="color: white;">
                <%= current_collaborator.name %>
              </figcaption>
            </div>
            <%= link_to boombox_dj_signout_path, method: :delete do %>
              <i>退出登录</i>
            <% end %>
          </li>
          <li>
            <%= link_to boombox_dj_tracks_path do %>
              <i class="fa fa-home fa-fw"></i> 个人音乐
            <% end %>
          </li>
          <li>
            <%= link_to boombox_dj_playlists_path do %>
              <i class="fa fa-home fa-fw"></i> 个人Playlist
            <% end %>
          </li>
          <li role="presentation">
            <%= link_to boombox_dj_boom_topics_path do %>
              <i class="fa fa-home fa-fw"></i> Timeline 
            <% end %>
          </li>
          <li>
            <%= link_to edit_boombox_dj_collaborator_path(current_collaborator) do %>
              <i class="fa fa-home fa-fw"></i> 个人资料
            <% end %>
          </li>
          <li>
            <%= link_to boombox_dj_boom_albums_path do %>
              <i class="fa fa-home fa-fw"></i> 相册 
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div id="page-wrapper">
    <%= yield %>
  </div>
</div>
