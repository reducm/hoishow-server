<%# encoding: utf-8 %>

<div id="wrapper">
  <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
    <div class="navbar-header">
      <a class="navbar-brand" href=<%= boombox_dj_root_path%>>播霸</a>
    </div>
    
    <%#= notice_message %>

    <div class="navbar-default sidebar" role="navigation">
      <div class="sidebar-nav navbar-collapse">
        <ul class="nav" id="side-menu">
          <li>
            <div style="text-align: center;" class="side-menu-photo">
              <p>
                <div id="sb_avatar">
                  <%= boombox_default_avatar current_collaborator.avatar_url %>
                  <figcaption style="color: white;"><%= current_collaborator.nickname %></figcaption>
                </div>
              </p>
            </div>
            <%= link_to boombox_dj_signout_path, method: :delete do %>
              退出登录
            <% end %>
          </li>
          <li>
            <%= link_to boombox_dj_boom_tracks_path do %>
              <i class="fa fa-music fa-fw"></i> 个人音乐
            <% end %>
          </li>
          <li>
            <%= link_to boombox_dj_playlists_path do %>
              <i class="fa fa-home fa-fw"></i> 个人Playlist
            <% end %>
          </li>
          <li role="presentation">
            <%= link_to boombox_dj_boom_topics_path do %>
              <i class="fa fa-home fa-fw"></i> Timeline 
            <% end %>
          </li>
          <li>
            <%= link_to edit_boombox_dj_collaborator_path(current_collaborator) do %>
              <i class="fa fa-user fa-fw"></i> 个人资料
            <% end %>
          </li>
          <li>
            <%= link_to boombox_dj_boom_albums_path do %>
              <i class="fa fa-file-image-o fa-fw"></i> 相册 
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div id="page-wrapper" class="clearfix">
    <%= yield %>
  </div>
</div>
