  <div class="nav">
    <h1 class="pull-left">城市列表</h1>
  </div>

  <div class="cities_list">
    <table class="cities table">
      <thead>
        <tr>
          <th>名称</th>
          <th>场馆数</th>
        </tr>
      </thead>
      <% @cities.each do |city| %>
        <tr>
          <td><%= city.name %></td>
          <td><%= city.stadiums_count %></td>
        </tr>
      <% end %>
    </table>
  </div>