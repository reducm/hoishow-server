<%# encoding: utf-8 %>

<table class="table table-hover messages">
  <thead>
    <tr>
      <th>消息类别</th>
      <th>推送用户</th>
      <th>通知栏内容</th>
      <th>消息标题</th>
      <th>消息内容</th>
      <th>推送用户数</th>
      <th>发送时间</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% messages.each do|message| %>
      <tr>
        <td><%= message.send_type_cn %></td>
        <td><%= message.creator_type_cn %></td>
        <td><%= message.notification_text %></td>
        <td><%= message.title %></td>
        <td width="500px"><%= message.content %></td>
        <td><%= message.users.count%></td>
        <td><%= message.created_at.try(:strfcn_time) %></td>
        <td><%= link_to "发送推送", send_umeng_message_again_operation_message_path(message), method: "post" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate messages %>
