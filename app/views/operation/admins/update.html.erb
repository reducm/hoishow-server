<div class="nav">
  <h2>修改密码</h2>
  <%= form_tag(operation_admin_path(@admin), method: "post", class: "form-horizontal") do %>

    <div class="form-group">
      <%= label_tag(:name, "用户名称", class: "col-sm-2 control-label")%>
      <div class="col-sm-10">
        <%= label_tag(:name, @admin.name, class: "form-control-static")%>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag(:name, "密码", class: "col-sm-2 control-label")%>
      <div class="col-sm-5">
        <%= password_field_tag(:pw1, "", placeholder: "Password", class: "form-control")%>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag(:name, "确认密码", class: "col-sm-2 control-label")%>
      <div class="col-sm-5">
        <%= password_field_tag(:pw2, "", placeholder: "Password", class: "form-control")%>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= submit_tag("确认", id: "submit", class: "btn btn-default")%>
      </div>
    </div>
  <%end%>
  <strong id="error_msg" class="col-sm-offset-2 col-sm-10 form-control-static"></strong>
</div>
