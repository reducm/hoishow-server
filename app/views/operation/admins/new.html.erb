<div>
  <h2>新增系统用户</h2>
  <div class='content'>
    <%= form_tag operation_admins_path, method: :post do %>
      <div class="group wat-cf">
        <div class="left">
          <%= label_tag :username, "用户名", :class=>"right" %>
        </div>
        <div class="right">
          <%= text_field_tag :username, nil, :class=>"text_field" %>
        </div>
      </div>
      <div class="group wat-cf">
        <div class="left">
          <%= label_tag :password, "密码", :class=>"right" %>
        </div>
        <div class="right">
          <%= password_field_tag :password, :class=>"text_field" %>
        </div>
      </div>
      <div class="group wat-cf">
        <div class="left">
          <%= label_tag :type, "类型", :class=>"right" %>
        </div>
        <div class="right">
          <%= select_tag :type, options_for_select([ ["Admin", 0], ["Operation", 1] ], "Admin") %>
        </div>
      </div>
      <div class="group wat-cf">
        <div class="right">
          <%= submit_tag "创建", class: "btn btn-primary" %>
          <%= link_to "返回", operation_admins_path, class: 'btn btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>