<%# encoding: utf-8 %>

<div class="nav">
  <h2>新增系统用户</h2>
  <div class="form-horizontal">
    <%= form_tag operation_admins_path, method: :post do %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= label_tag :username, "用户名" %>
        </div>
        <div class="col-sm-5" >
          <%= text_field_tag :username, nil, class: 'form-control'%>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= label_tag :password, "密码" %>
        </div>
        <div class="col-sm-5">
          <%= password_field_tag :password ,nil, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= label_tag :type, "类型"%>
        </div>
        <div class="col-sm-2">
          <%= select_tag :type, options_for_select([ ["Admin", 0], ["Operation", 1], ["ticket_checker", 2] ], "Admin") , class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10" >
          <%= submit_tag "创建", id: "admins_new_submit", class: "btn btn-primary" %>
          <%= link_to "返回", operation_admins_path, class: 'btn btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
  <strong id="admins_new_error_msg" class="col-sm-offset-2 col-sm-10 form-control-static"></strong>
</div>
