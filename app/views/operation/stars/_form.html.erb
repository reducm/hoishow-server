<%# encoding: utf-8 %>
<%= simple_form_for([:operation, star ], html: { class: 'form-horizontal', multipart: :true }) do |f| %>
  <%= f.input :is_display, label: "是否显示" %>
  <%= f.input :name, label: "艺人名称" %>

  <% if star.avatar_url %>
    <%= label_tag "当前头像" %>
    <%= image_tag(star.avatar_url, size: "80x80")  %>
  <% end %>

  <%= f.input :avatar, label: "上传头像" %>

  <% if star.avatar_url %>
    <%= label_tag "当前头像" %>
    <%= image_tag(star.poster_url, size: "700x500") %>
  <% end %>

  <%= f.input :poster, label: "上传海报" %>

  <%= f.kindeditor :description %>

  <div class="form-group">
    <%= fields_for :videos do |video| %>
      <%= video.label :source, "艺人视频(单个文件最大30m，只支持mp4格式)" %>
      <%= video.file_field :source, multiple: :true, name: "videos[source][]" %>
    <% end %>
  </div>

  <% if star.videos.any? %>
    <% if star.videos.first.valid? %>
      <%= render partial: 'operation/videos/table', locals: { videos: @videos } %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.button :submit %>
  </div>
<% end %>