<%# encoding: utf-8 %>

<table class="table table-hover orders">
  <thead>
    <tr>
      <th>演出名称</th>
      <th>用户 / 手机号</th>
      <th>票的类型</th>
      <th>订单时间</th>
      <th>状态</th>
      <th>总价</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% orders.each do|order| %>
      <tr>
        <% user = order.user %>
        <td><%= link_to order.show_name, operation_show_path(order.show) %></td>
        <td><%= link_to user_name(user), operation_user_path(user) %></td>
        <td><%= order.show.ticket_type_cn %></td>
        <td><%= order.created_at.strfcn_date %></td>
        <td class="order_status_cn"><%= order.status_cn %></td>
        <td><%= order.amount %></td>
        <td><%= link_to "查看详情", operation_order_path(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
