<%# encoding: utf-8 %>

<table class="table table-hover orders">
  <thead>
    <tr>
      <th>永乐id</th>
      <th>联盟id</th>

      <th>演出名称</th>
      <th>演出城市</th>
      <th>演出时间</th>

      <th>订单状态</th>
      <th>下单平台</th>
      <th>下单时间</th>
      <th>付款时间</th>

      <th>门票类型</th>
      <th>票务信息</th>
      <th>单价</th>
      <th>购票数目</th>
      <th>总金额</th>

      <th>手机号</th>
      <th>收货人姓名</th>
      <th>收货人电话</th>
      <th>收货人地址</th>
      <th>快递公司</th>
      <th>快递单号</th>
    </tr>
  </thead>
  <tbody>
    <% @orders_for_export.each do |order| %>
      <% user = order.user %>
      <tr>
        <td><%= order.source_id%></td>
        <td><%= order.out_id%></td>

        <td><%= order.show_name %></td>
        <td><%= order.city_name %></td>
        <td><%= order.show.description_time %></td>

        <td class="order_status_cn"><%= order.status_cn %></td>
        <td><%= order.buy_origin %></td>
        <td><%= order.created_at_format %></td>
        <td><%= order.pay_at_format %></td>

        <td><%= order.show.try(:ticket_type_cn) %></td>
        <td><%= order.ticket_info %></td>
        <td><%= order.unit_price %></td>
        <td><%= order.tickets_count %></td>
        <td><%= order.amount %></td>

        <td><%= order.get_username(user) %></td>
        <% if order.show.r_ticket? %>
          <td><%= order.user_name  %></td>
          <td><%= order.user_mobile %></td>
          <td width="400px"><%= order.user_address %></td>
          <td id="td_express_id_<%= order.id %>"><%= order.express_name %></td>
          <td id="td_express_id_<%= order.id %>"><%= order.express_id %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
