<%# encoding: utf-8 %>

<table class="table table-hover orders">
  <thead>
    <tr>
      <th>订单号</th>
      <th>演出名称</th>
      <th>用户 / 手机号</th>
      <th>订单类型</th>
      <th>订单时间</th>
      <th>订单状态</th>
      <th>总价</th>
      <th>收货人姓名</th>
      <th>收货人电话</th>
      <th>收货人地址</th>
      <th>快递单号</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do|order| %>
      <tr>
        <td><%= order.out_id%></td>
        <% user = order.user %>
        <td><%= order.show_name %></td>
        <td><%= user_name(user) %></td>
        <td><%= order.show.try(:ticket_type_cn) %></td>
        <td><%= order.created_at.try(:strfcn_time) %></td>
        <td class="order_status_cn"><%= order.status_cn %></td>
        <td><%= order.amount %></td>
        <% if order.show.r_ticket? %>
        <td><%= order.user_name  %></td>
        <td><%= order.user_mobile %></td>
        <td width="400px"><%= order.user_address %></td>
        <td id="td_express_id_<%= order.id %>"><%= order.express_id%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @orders %>
