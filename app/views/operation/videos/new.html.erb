<%# encoding: utf-8 %>

<h1>上传视频</h1>

<%= simple_form_for([:operation, @video ], html: { class: 'dropzone form-horizontal', id: "dz-form", multipart: :true }) do |f| %>
  <div class="form-group">
    <%= f.hidden_field :star_id, value: @star.id %>
  </div>

  <div class="form-group">
    <%= link_to "完成", edit_operation_star_path(@star), class: "btn btn-primary" %>
  </div>
<% end %>
