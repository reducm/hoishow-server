<h1>Video列表</h1>

<table class="table table-striped" id="video-table">
  <thead>
    <tr>
      <th>#id</th>
      <th>艺人</th>
      <th>演唱会</th>
      <th>视频</th>
      <th>更新日期</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% videos.each do|video|%>
      <tr>
        <td><%= video.id %></td>
        <td><%= video.star %></td>
        <td><%= video.concert %></td>
        <td><%= video_tag video.url rescue nil %></td>
        <td><%= video.updated_at %></td>
        <td>
          <%= link_to "查看", operation_video_path(video) %> / 
          <%= link_to "编辑", edit_operation_video_path(video) %> / 
          <%= link_to "删除", operation_video_path(video), method: "delete", confirm: true %>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>
