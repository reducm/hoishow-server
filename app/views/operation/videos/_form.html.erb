<%= simple_form_for([:operation, video ], html: { class: 'form-horizontal', multipart: :true }) do |f| %>
  <div class="form-group">
    <%= image_tag(video.snapshot.url, size: "300x200") if video.snapshot_url %>
    <%= f.input :snapshot, label: "截图" %>
  </div>

  <div class="form-group">
    <%= f.button :submit %>
  </div>
<% end %>
