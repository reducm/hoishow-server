# encoding: utf-8
<div class="nav">
  <h1 class="pull-left">编辑演出</h1>
</div>
<div class="form-group show">
  <%= label_tag(:name, "演出名称", class: "col-sm-2 control-label")%>
  <div class="col-sm-10">
    <%= label_tag(:name, @show.name, class: "form-control-static")%>
  </div>
  <%= hidden_field_tag "show_id", @show.id %>
  <%= simple_form_for [:operation, @show] do |f| %>
    <%= f.input :is_display, label: "是否显示" %>
    <%= f.input :name, required: false, label: "演出名称" %>
    <%= f.input :show_time, label: "演出日期", as: :datetimepicker %>
    <%= f.input :ticket_type, label: "票的类型", collection:[["电子票", "e_ticket"], ["实体票", "r_ticket"]], selected: @show.ticket_type_cn, disabled: true %>
    <%= f.input :poster, label: "演出海报" %>
    <%= image_tag(@show.poster_url, size: "700x500") if @show.poster_url %>
    <%= f.kindeditor :description %>
    <%= f.association :city, label_method: :name, value_method: :id, disabled: true %>
    <%= f.association :stadium, required: false, label_method: :name, value_method: :id, disabled: true %>
    <%= f.hidden_field :concert_id, value: @concert.id %>
    <%= f.button :submit, "保存" %>
  <% end %>

  <%= image_tag(@show.stadium.pic_url, size: "700x500") if @show.stadium.pic_url %>
</div>

<div id="show_area">
  <%= render partial: "area_table", locals: {show: @show, stadium: @show.stadium} %>
</div>
