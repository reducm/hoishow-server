<%# encoding: utf-8 %>
<div class="row">
  <div class="col-md-12">
    <%= simple_form_for [:operation, page], url: url do |f| %>
      <%= f.input :title, collection: Page::ALL_PAGE, label_method: lambda {|key| t("activerecord.attributes.page_title_values.#{key}")}, prompt: '选择页面类型' %>
      <%= f.input :description %>
      <%= f.submit '提交', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
