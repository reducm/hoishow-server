<%# encoding: utf-8 %>

<%= simple_form_for [:operation, help], html: { class: 'form-horizontal' } do|f| %>
  <div class="form-group">
    <div class="col-xs-2">
      <%= f.input :name %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-7">
      <%= f.input :description %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
