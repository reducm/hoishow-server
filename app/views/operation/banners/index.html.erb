<h1>Banner列表</h1>

<%= link_to "创建Banner", new_operation_banner_path, class: "btn btn-primary" %> 

<table class="table table-striped" id="banner-table">
  <thead>
    <tr>
      <th>#id</th>
      <th>主体类型</th>
      <th>主体</th>
      <th>海报</th>
      <th>图文介绍</th>
      <th>slogan标语</th>
      <th>创建日期</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @banners.each do|banner|%>
      <tr>
        <td><%= banner.id %></td>
        <td><%= banner.subject_type %></td>
        <td>
          <% if !banner.is_article? %>
            <%= link_to banner.subject_name, subject_show_url(banner.subject_type, banner.subject_id)  %> 
          <%else%>
            图文主体
          <%end%>
        </td>
        <td><img src='<%= banner.poster.url rescue nil %>' class="preview-pic" /></td>
        <td><%= link_to "图文描述", description_path(subject_type: "Banner", subject_id: banner.id), target: "blank" %> </td>
        <td><%= banner.slogan %></td>
        <td><%= banner.updated_at %></td>
        <td>
          <%= link_to "查看", operation_banner_path(banner) %> / 
          <%= link_to "编辑", edit_operation_banner_path(banner) %> / 
          <%= link_to "删除", operation_banner_path(banner), method: "delete", confirm: true %>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>
