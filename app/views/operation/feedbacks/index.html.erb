<%# encoding: utf-8 %>

<div class="nav">
  <h1 class="pull-left">反馈列表</h1>
</div>
<div class="feedbacks_list mt20">
  <table class='table'>
    <thead>
      <th>反馈内容</th>
      <th>联系方式</th>
      <th>反馈时间</th>
      <th>操作</th>
    </thead>
    <tbody>
      <% @feedbacks.each do |feedback| %>
        <tr>
          <td><%= feedback.content %></td>
          <td><%= feedback.mobile %></td>
          <td><%= get_datetime(feedback.created_at) %></td>
          <td><%= link_to '删除', operation_feedback_path(feedback), method: :delete, data: {confirm: '确定要删除吗'} %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @feedbacks %>
</div>
